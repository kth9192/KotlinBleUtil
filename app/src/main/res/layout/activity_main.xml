<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">

	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/scan"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>

	<Switch
			android:id="@+id/scan"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="스캔"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.693"
			app:layout_constraintHorizontal_bias="0.473"/>

	<Button
			android:id="@+id/connect"
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="연결"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/read"
			android:layout_marginBottom="152dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toBottomOf="@+id/scan"
			app:layout_constraintVertical_bias="0.0"/>

	<Button
			android:id="@+id/read"
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="읽기"
			app:layout_constraintStart_toEndOf="@+id/connect"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toStartOf="@+id/write"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="@+id/connect"
			app:layout_constraintVertical_bias="0.0"/>

	<Button
			android:id="@+id/write"
			android:layout_width="100dp"
			android:layout_height="50dp"
			android:text="쓰기"
			app:layout_constraintStart_toEndOf="@+id/read"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginBottom="148dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="@+id/connect"
			app:layout_constraintVertical_bias="0.0"
			/>
</androidx.constraintlayout.widget.ConstraintLayout>